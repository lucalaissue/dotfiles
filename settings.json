{
    "editor.lineNumbers": "relative",
    "editor.fontSize": 16,
    "editor.tabSize": 4,
    "editor.fontWeight": "600",
    "editor.fontFamily": "'Source code pro', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",

    // Vim settings
    "vim.timeout": 2000,
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.replace": "underline",
    "vim.cursorStylePerMode.visualblock": "line",
    "vim.leader": " ",
    "vim.useSystemClipboard": true,
    "vim.autoindent": true,
    "vim.normalModeKeyBindings": [
        // Movements
        { "before": [ "<C-j>" ], "after": [ "1", "0", "j", "z", "z" ] },
        { "before": [ "<C-k>" ], "after": [ "1", "0", "k", "z", "z" ] },
        { "before": [ "<left>" ], "after": [] },
        { "before": [ "<right>" ], "after": [] },
        { "before": [ "<up>" ], "after": [] },
        { "before": [ "<down>" ], "after": [] },

        // Debug
        { "before": ["<leader>", "d", "d"], "commands": ["workbench.action.debug.restart"]},
        { "before": ["<leader>", "d", "o"], "commands": ["workbench.action.debug.stepOver"]},
        { "before": ["<leader>", "d", "i"], "commands": ["workbench.action.debug.stepInto"]},
        { "before": ["<leader>", "d", "I"], "commands": ["workbench.action.debug.stepOut"]},
        { "before": ["<leader>", "d", "c", "b"], "commands": ["editor.debug.action.conditionalBreakpoint"]},
        { "before": ["<leader>", "d", "b"], "commands": ["editor.debug.action.toggleBreakpoint"]},
        { "before": ["<leader>", "d", "j"], "commands": ["debug.jumpToCursor"]},

        // Refactoring
        { "before": ["<leader>", "r", "r"], "commands": ["editor.action.rename"]},
        { "before": ["<leader>", "r", "g", "d"], "commands": ["editor.action.revealDefinition"]},
        { "before": ["<leader>", "c"], "commands": ["editor.action.commentLine"]},

        // Edit
        { "before": ["<leader>", "e"], "commands": ["workbench.action.quickOpen"]},
        { "before": ["<leader>", "e", "v"], "commands": ["workbench.action.splitEditor", "workbench.action.quickOpen"]},
        { "before": ["<leader>", "e", "n"], "commands": ["workbench.action.files.newUntitledFile"]},

        { "before": ["<leader>", "h"], "commands": ["editor.action.showHover"]},

        // Terminal
        { "before": ["<leader>", "t"], "commands": ["workbench.action.terminal.focus"]}
    ],
    "vim.visualModeKeyBindings": [
        { "before": ["<leader>", "c"], "commands": ["editor.action.commentLine"]}
    ],
    "vim.insertModeKeyBindings": [
        { "before": [ "<left>" ], "after": [] },
        { "before": [ "<right>" ], "after": [] },
        { "before": [ "<up>" ], "after": [] },
        { "before": [ "<down>" ], "after": [] }
    ],

    // Gitlens
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,

    "editor.defaultFormatter": "xaver.clang-format",
    "editor.minimap.showSlider": "always",
    "editor.smoothScrolling": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    "git.autofetch": true,

    "workbench.startupEditor": "none",
    "workbench.tree.indent": 12,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.editor.centeredLayoutAutoResize": false,

    "screencastMode.fontSize": 24,
    "screencastMode.verticalOffset": 10,

    "explorer.compactFolders": false,

    "window.newWindowDimensions": "maximized",
    "window.restoreFullscreen": true,

    "search.showLineNumbers": true,

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "window.menuBarVisibility": "compact",
    "vetur.completion.tagCasing": "initial",
    "vetur.format.options.tabSize": 4
}
